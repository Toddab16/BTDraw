<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:weightSum="1"
    >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/color_textView"
                android:textSize="24sp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Red: "
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/color_textView"
                android:layout_alignParentStart="true"
                android:id="@+id/red_textView" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/color_textView"
                android:layout_alignRight="@+id/red_textView"
                android:id="@+id/red_textView_value"
                android:text="0"
                android:layout_alignStart="@+id/blue_textView_value"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/red_textView"
                android:layout_alignParentStart="true"
                android:id="@+id/red_seekBar"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Green: "
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/red_seekBar"
                android:layout_alignParentStart="true"
                android:id="@+id/green_textView" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/red_seekBar"
                android:layout_alignRight="@+id/green_textView"
                android:id="@+id/green_textView_value"
                android:text="0"
                android:layout_toEndOf="@+id/button" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/green_textView"
                android:layout_alignParentStart="true"
                android:id="@+id/green_seekBar"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Blue: "
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@+id/green_seekBar"
                android:id="@+id/blue_textView" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/green_seekBar"
                android:layout_alignRight="@+id/blue_textView"
                android:id="@+id/blue_textView_value"
                android:text="0"
                android:layout_toEndOf="@+id/red_textView" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/blue_textView"
                android:id="@+id/blue_seekBar"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:text="OK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ok_button"
                android:layout_weight="0.5" />

            <Button
                android:text="CANCEL"
                android:layout_height="wrap_content"
                android:id="@+id/cancel_button"
                android:layout_weight="0.5"
                android:layout_width="wrap_content" />

        </TableRow>
    </TableLayout>

</LinearLayout>